<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/layout_dashboard_item"
        android:layout_width="wrap_content"
        android:layout_margin="@dimen/margin_10_dp"
        android:padding="@dimen/padding_10dp"
        android:layout_height="@dimen/margin_80_dp">

        <android.support.v7.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/card_view"
            app:cardCornerRadius="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="1">
        <ImageView
            android:id="@+id/expenseImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
              android:layout_gravity="center"
            android:src="@drawable/ic_menu_camera" />
        </android.support.v7.widget.CardView>

        <com.example.millipixelsinteractive_031.em.typeface.FontsClass
            android:id="@+id/categoryNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:layout_toEndOf="@+id/card_view"
            android:layout_toRightOf="@+id/card_view"
            android:text="jdgau"
            android:textColor="@color/black" />

        <com.example.millipixelsinteractive_031.em.typeface.FontsClass
            android:id="@+id/amountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="11dp"
            android:text="$3.50"
            />

        <SeekBar
            android:layout_marginTop="14dp"
            android:progress="30"
            android:thumb="@null"

            android:layout_toLeftOf="@+id/percentTextView"
            android:layout_below="@+id/categoryNameTextView"
            android:layout_toRightOf="@+id/card_view"
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <com.example.millipixelsinteractive_031.em.typeface.FontsClass
            android:id="@+id/percentTextView"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/amountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="11dp"
            android:text="$3.50"
            />
    </RelativeLayout>




</RelativeLayout>