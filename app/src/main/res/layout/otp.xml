<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">



    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/sign_in_top_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:background="@drawable/ic_arrow_back_white_24dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_10_dp"
            android:layout_height="wrap_content" />


    </LinearLayout>



    <LinearLayout
        android:id="@+id/sign_in_inside_layout"
        android:layout_below="@+id/sign_in_top_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_50_dp"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/signin"
            android:textSize="@dimen/size_30dp"
            android:textColor="@color/purple_text"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="@dimen/margin_10_dp"
            android:text="@string/we_just_sent_otp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:textSize="@dimen/size_15dp"
            android:textColor="@color/grey_text"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_marginTop="10dp"
            android:id="@+id/layout_otp"
            android:layout_below="@+id/txtEnterText"

            android:paddingTop="@dimen/padding_10dp"
            android:paddingBottom="@dimen/padding_10dp"
            android:paddingLeft="@dimen/padding_70dp"
            android:paddingRight="@dimen/padding_70dp"

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="wrap_content">
                <com.application.millipixels.expense_rocket.typeface.FontEditText
                    android:inputType="numberPassword"
                    android:id="@+id/edt1"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:lines="1"
                    android:maxLength="1"
                    android:background="#f7f7f7"
                    android:imeOptions="actionNext"
                    android:gravity="center"
                    android:layout_width="50dp"
                    android:layout_height="60dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="wrap_content">
                <com.application.millipixels.expense_rocket.typeface.FontEditText
                    android:inputType="numberPassword"

                    android:id="@+id/edt2"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:lines="1"
                    android:maxLength="1"
                    android:imeOptions="actionNext"
                    android:gravity="center"
                    android:background="#F7F7F7"
                    android:layout_width="50dp"
                    android:layout_height="60dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="wrap_content">
                <com.application.millipixels.expense_rocket.typeface.FontEditText
                    android:inputType="numberPassword"

                    android:textSize="14sp"
                    android:singleLine="true"
                    android:lines="1"
                    android:id="@+id/edt3"
                    android:imeOptions="actionNext"
                    android:gravity="center"
                    android:background="#F7F7F7"
                    android:maxLength="1"
                    android:layout_width="50dp"
                    android:layout_height="60dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="wrap_content">
                <com.application.millipixels.expense_rocket.typeface.FontEditText
                    android:inputType="numberPassword"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:lines="1"
                    android:imeOptions="actionDone"
                    android:gravity="center"
                    android:background="#F7F7F7"
                    android:maxLength="1"
                    android:id="@+id/edt4"
                    android:layout_width="50dp"
                    android:layout_height="60dp" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btnVerify"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_20_dp"
            android:layout_marginLeft="@dimen/margin_40_dp"
            android:layout_marginRight="@dimen/margin_40_dp"
            android:paddingTop="@dimen/padding_20dp"
            android:paddingBottom="@dimen/padding_20dp"
            android:background="@drawable/app_round_button_drawable"
            android:text="@string/signin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <RelativeLayout
        android:layout_below="@+id/sign_in_inside_layout"
        android:layout_width="match_parent"
        android:layout_above="@+id/sign_in_bottom_layout"
        android:layout_height="match_parent">


        <ImageView
            android:layout_marginBottom="@dimen/margin_20_dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_rocket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sign_in_bottom_layout"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@drawable/half_circle"
        android:padding="@dimen/padding_30dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/use_social_signin_textView"
            android:gravity="center"

            android:text="@string/use_social_signin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_below="@+id/use_social_signin_textView"
            android:layout_width="match_parent"
            android:gravity="center"

            android:layout_marginTop="@dimen/margin_10_dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgGPlus"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_if_google_circle"
                android:layout_width="48dp"
                android:layout_height="48dp" />
            <ImageView
                android:layout_toLeftOf="@+id/imgGPlus"
                android:layout_marginRight="@dimen/margin_50_dp"
                android:src="@drawable/ic_if_facebook_circle"
                android:layout_width="48dp"
                android:id="@+id/imgFb"
                android:layout_height="48dp" />

            <ImageView
                android:layout_toLeftOf="@+id/imgFb"
                android:layout_marginRight="@dimen/margin_50_dp"
                android:src="@drawable/ic_if_twitter_circle"
                android:layout_width="48dp"
                android:id="@+id/imgTwiiter"
                android:layout_height="48dp" />
            <com.google.android.gms.common.SignInButton
                android:id="@+id/sign_in_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone"
                />
            <com.facebook.login.widget.LoginButton
                android:id="@+id/login_button"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp" />
            <com.twitter.sdk.android.core.identity.TwitterLoginButton
                android:elevation="5dp"
                android:visibility="gone"
                android:id="@+id/twitter_login"
                android:layout_marginBottom="36dp"
                android:layout_toLeftOf="@+id/imgFb"
                android:layout_centerHorizontal="true"
                android:paddingLeft="60dp"
                android:layout_marginTop="2dp"
                android:paddingRight="60dp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:text="@string/send_otp"
                android:background="@drawable/app_round_button_drawable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>
