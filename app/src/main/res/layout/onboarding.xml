<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"

    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:padding="@dimen/padding_15_dp"
        android:background="@color/white"
        android:gravity="center"
        android:layout_height="wrap_content">


        <com.application.millipixels.expense_rocket.typeface.FontsClassLight
            android:id="@+id/btn_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/skip"
            android:textAllCaps="true"
            android:textSize="@dimen/size_12dp"
            android:layout_centerVertical="true"
            android:thicknessRatio="1.9"
            android:textColor="@color/grey_text" />

    </RelativeLayout>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp"
        android:shape="ring"
        android:innerRadius="0dp"
        android:layout_marginLeft="@dimen/margin_8_dp"
        android:layout_marginRight="@dimen/margin_8_dp"
        android:layout_marginTop="@dimen/margin_8_dp"

        app:cardUseCompatPadding="true"
        android:layout_above="@+id/bottom_layout"

        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/onboarding_login_signup_layout"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:background="@color/onboarding_background"
            android:paddingBottom="@dimen/padding_30dp"
            android:layout_height="wrap_content">

        <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"


        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />


        <RelativeLayout
        android:id="@+id/onboarding_header_layout"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/margin_20_dp"
        android:layout_marginRight="@dimen/margin_10_dp"
        android:layout_marginLeft="@dimen/margin_10_dp"
        android:layout_height="@dimen/topbar_Height">


        <com.application.millipixels.expense_rocket.typeface.FontsClassLight
        android:id="@+id/already_have_account_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_15_dp"
        android:gravity="right"

        android:textColor="@color/white"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="@string/already_have_account"/>


        <com.application.millipixels.expense_rocket.typeface.FontsClass
        android:id="@+id/btn_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signin"

        android:layout_below="@+id/already_have_account_textView"
        android:layout_marginRight="@dimen/margin_20_dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/size_15dp"
        android:layout_centerVertical="true"
        android:textColor="@color/white" />

        <Button
        android:id="@+id/signin_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="#00000000"
        android:layout_alignParentRight="true"
        />
        </RelativeLayout>

        <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/margin_60_dp"
        android:paddingTop="@dimen/margin_120_dp">
        <LinearLayout

        android:gravity="center|left"
        android:id="@+id/layoutDots"
        android:layout_width="match_parent"

        android:layout_centerInParent="true"
        android:layout_height="50dp"
        android:orientation="horizontal">

        </LinearLayout>
        </FrameLayout>


       <com.application.millipixels.expense_rocket.typeface.FontButton

        android:background="@drawable/app_round_button_drawable"
        android:id="@+id/add_an_expense_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_20_dp"
        android:textColor="@color/button_text_color"
        android:text="@string/add_an_expense"
        android:paddingLeft="@dimen/padding_40dp"
        android:paddingRight="@dimen/padding_40dp"

        android:layout_width="wrap_content"
        android:layout_height="40dp" />




        </RelativeLayout>



    </android.support.v7.widget.CardView>



</RelativeLayout>