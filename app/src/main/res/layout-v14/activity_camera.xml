<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.application.millipixels.expense_rocket.CameraActivity">
    <RelativeLayout
        android:padding="@dimen/margin_8_dp"
        android:background="@color/purple"
        android:id="@+id/top_menu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/margin_8_dp"
            android:layout_marginBottom="@dimen/margin_8_dp"
            android:id="@+id/btnFlash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView

            android:src="@drawable/ic_flash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_centerInParent="true"
            android:src="@drawable/ic_flash_inner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        </RelativeLayout>
        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/margin_8_dp"
            android:layout_marginBottom="@dimen/margin_8_dp"
            android:layout_marginLeft="@dimen/size_25dp"
            android:id="@+id/btnHalfCircle"
            android:layout_toRightOf="@id/btnFlash"
            android:src="@drawable/ic_half_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_marginTop="@dimen/margin_8_dp"
            android:layout_marginBottom="@dimen/margin_8_dp"
            android:layout_marginLeft="@dimen/size_25dp"
            android:layout_toRightOf="@id/btnHalfCircle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView

                android:id="@+id/btnPage"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txtPageCount"
                android:paddingRight="3dp"
                android:paddingTop="3dp"
                android:textColor="@color/white"
                android:text="0"
                android:textSize="12sp"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>


        <TextView
            android:id="@+id/txtDone"
            android:padding="@dimen/margin_8_dp"
            android:layout_marginRight="@dimen/margin_8_dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:text="@string/done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/focus_menu"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@color/dark_purple"
        android:orientation="horizontal"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@+id/top_menu"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="72dp">
        <LinearLayout
            android:id="@+id/btnAuto"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView
                android:scaleType="fitCenter"
                android:id="@+id/iv"
                android:src="@drawable/ic_auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@color/colorAccent" />

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Auto"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnSunny"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView
                android:src="@drawable/ic_sunny"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@color/colorAccent" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Sunny"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/btnCloudy"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_cloudy"
                android:tint="@color/colorAccent" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Cloudy"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnFluroescent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:src="@drawable/ic_fluroescent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@color/colorAccent" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Fluroescent"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnTungsten"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:src="@drawable/ic_tungsten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@color/colorAccent" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Tungsten"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

<FrameLayout
    android:id="@+id/container"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/focus_menu"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_width="0dp"
    android:layout_height="0dp" />
 <RelativeLayout

     android:id="@+id/bottom_layout"
     android:background="@color/transparent"
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintRight_toRightOf="parent"
     app:layout_constraintLeft_toLeftOf="parent"
     android:layout_width="0dp"
     android:layout_height="wrap_content">

     <Button
         android:background="@color/transparent"
         android:textSize="16sp"
         android:id="@+id/btnCancel"
         android:textAllCaps="false"
         android:layout_marginLeft="@dimen/size_20dp"
         android:layout_centerVertical="true"
         android:textColor="@color/red_error"
         android:text="Cancel"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" />

     <ImageView
         android:id="@+id/btnCamera"
         android:layout_centerInParent="true"
         android:src="@drawable/ic_camera_click"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" />

     <ImageView
         android:layout_marginRight="@dimen/size_20dp"
         android:layout_centerVertical="true"
         android:layout_alignParentRight="true"
         android:src="@drawable/ic_gallery"
         android:layout_width="32dp"
         android:layout_height="28dp" />
 </RelativeLayout>
</android.support.constraint.ConstraintLayout>
