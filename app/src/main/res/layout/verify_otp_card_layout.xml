<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_marginRight="40dp"
    android:layout_marginLeft="40dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    app:ignore="NamespaceTypo">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:layout_below="@+id/layout_action"
        android:background="@android:color/white"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        card_view:cardCornerRadius="4dp">
        <RelativeLayout
            android:paddingRight="28dp"
            android:paddingLeft="28dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.example.millipixelsinteractive_031.em.typeface.FontsClassLight
                android:textStyle="bold"
                android:textSize="14sp"
                android:id="@+id/txtEnterText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:text="@string/verify_mobile"
                />

            <LinearLayout
                android:layout_marginTop="32dp"
                android:id="@+id/layout_otp"
                android:layout_below="@+id/txtEnterText"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <com.example.millipixelsinteractive_031.em.typeface.FontEditText

                        android:id="@+id/first_digit_EditText"
                        android:inputType="number"
                        android:padding="12dp"
                        android:textSize="14sp"
                        android:singleLine="true"
                        android:lines="1"
                        android:imeOptions="actionNext"
                        android:gravity="center"
                        android:hint="X"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <com.example.millipixelsinteractive_031.em.typeface.FontEditText
                        android:id="@+id/second_digit_EditText"
                        android:inputType="number"
                        android:padding="12dp"
                        android:textSize="14sp"
                        android:singleLine="true"
                        android:lines="1"
                        android:imeOptions="actionNext"
                        android:gravity="center"
                        android:hint="X"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <com.example.millipixelsinteractive_031.em.typeface.FontEditText
                        android:id="@+id/third_digit_EditText"
                        android:inputType="number"
                        android:padding="12dp"
                        android:textSize="14sp"
                        android:singleLine="true"
                        android:lines="1"
                        android:imeOptions="actionNext"
                        android:gravity="center"
                        android:hint="X"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>


                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <com.example.millipixelsinteractive_031.em.typeface.FontEditText
                        android:id="@+id/fourth_digit_EditText"
                        android:inputType="number"
                        android:padding="12dp"
                        android:textSize="14sp"
                        android:singleLine="true"
                        android:lines="1"
                        android:imeOptions="actionDone"
                        android:gravity="center"
                        android:hint="X"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>


            <RelativeLayout
                android:layout_marginTop="@dimen/margin_25_dp"
                android:layout_below="@+id/layout_otp"
                android:id="@+id/layout_resend_otp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.example.millipixelsinteractive_031.em.typeface.FontsClassLight
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:text="@string/not_received_otp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <com.example.millipixelsinteractive_031.em.typeface.FontsClassLight
                    android:layout_alignParentRight="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"

                    android:text="@string/resend_otp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <com.example.millipixelsinteractive_031.em.typeface.FontButton
                android:id="@+id/btnVerify"

                android:layout_below="@+id/layout_resend_otp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="36dp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:text="@string/verify"
                android:background="@drawable/app_round_button_drawable"
                android:layout_width="180dp"
                android:layout_height="wrap_content" />

            <com.example.millipixelsinteractive_031.em.typeface.FontButton
                android:layout_marginBottom="36dp"
                android:layout_below="@+id/btnVerify"
                android:layout_centerHorizontal="true"
                android:id="@+id/btnChangeNumber"
                android:layout_marginTop="12dp"

                android:textAllCaps="false"
                android:textColor="@color/white"
                android:text="@string/change_number"
                android:background="@drawable/app_round_button_drawable"
                android:layout_width="180dp"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>