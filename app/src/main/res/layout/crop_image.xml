<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_crop_image"
        android:layout_width="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/app_gradient"
        android:layout_height="@dimen/topbar_height">
        <Button
            android:id="@+id/done_crop_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Done"
            android:background="@null"
            android:layout_marginLeft="@dimen/margin_10_dp"
            android:textColor="@color/white"
            android:layout_gravity="right"
            />


    </android.support.v7.widget.Toolbar>


    <LinearLayout

        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_crop_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/cardView"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="0dp">
        <com.theartofdev.edmodo.cropper.CropImageView
            android:id="@+id/cropImageView"
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            />
    </LinearLayout>


    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:id="@+id/cardView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:padding="16dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.FloatingActionButton
                android:layout_width="72dp"
                android:id="@+id/fabRotate"
                android:layout_marginRight="24dp"
                app:backgroundTint="@color/pink"
                android:src="@drawable/crop_image_menu_rotate_left"
                android:layout_height="72dp" />

            <android.support.design.widget.FloatingActionButton
                android:layout_width="72dp"
                app:backgroundTint="@color/greenFloating"
                android:layout_marginLeft="24dp"
                android:tint="@color/white"
                android:id="@+id/fabCrop"
                android:src="@drawable/ic_crop_black_24dp"
                android:layout_height="72dp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>