<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".onboarding.OnBoarding"
    android:background="@android:color/transparent">

    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pager"
        android:layout_above="@+id/button_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/onboarding_background"/>

    <com.application.millipixels.expense_rocket.typeface.FontButton

        android:background="@drawable/app_round_button_drawable"
        android:id="@+id/add_an_expense_button"
        android:textColor="@color/button_text_color"
        android:text="@string/add_an_expense"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_30_dp"
        android:paddingLeft="@dimen/padding_40dp"
        android:paddingRight="@dimen/padding_40dp"
        android:layout_above="@+id/button_layout"
        android:layout_width="wrap_content"
        android:layout_height="40dp" />



    <RelativeLayout
        android:id="@+id/button_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        >

        <com.application.millipixels.expense_rocket.typeface.FontsClassLight
            android:id="@+id/btn_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/skip"
            android:textAllCaps="true"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/size_12dp"
            android:layout_centerVertical="true"
            android:thicknessRatio="1.9"
            android:textColor="@color/grey_text" />


        <LinearLayout
            android:id="@+id/circles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true">

        </LinearLayout>

        <Button
            android:id="@+id/done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="DONE"
            android:textSize="18sp"
            android:background="@android:color/transparent"
            android:visibility="gone"/>

        <ImageButton
            android:id="@+id/next"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:paddingTop="13dp"
            android:paddingBottom="12dp"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            />
    </RelativeLayout>

</RelativeLayout>