<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <RelativeLayout
        android:orientation="horizontal"
        android:id="@+id/top_layout"
        android:layout_width="match_parent"


        android:layout_height="wrap_content">



        <ImageView
            android:layout_marginTop="@dimen/margin_50_dp"
            android:layout_centerVertical="true"
            android:id="@+id/back_button_otp"
            android:background="@drawable/ic_back_icon"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:tint="#808080"
            android:layout_marginLeft="@dimen/margin_30_dp"
            android:layout_height="wrap_content" />


        <RelativeLayout

            android:background="@color/red_error"
            android:layout_height="72dp"
            android:orientation="vertical"
            android:visibility="gone"

            android:id="@+id/sign_in_top_layout"
            android:layout_width="match_parent">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/imgErrorBack"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_alert_icon"
                android:layout_width="wrap_content"

                android:foregroundGravity="center_vertical"
                android:tint="#FFFFFF"
                android:layout_marginLeft="@dimen/margin_20_dp"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginLeft="@dimen/margin_20_dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imgErrorBack"
                android:background="@color/red_button"
                android:layout_height="wrap_content"
                android:orientation="vertical"


                android:layout_width="match_parent">


                <com.application.millipixels.expense_rocket.typeface.FontsClass
                    android:text="Please enter a valid phone number"
                    android:id="@+id/txtError"

                    android:maxLines="3"
                    android:textSize="@dimen/size_15sp"
                    android:layout_marginRight="@dimen/margin_10_dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <com.application.millipixels.expense_rocket.typeface.FontsClassLight
                    android:text="Try Again?"
                    android:id="@+id/try_again_txtError"

                    android:maxLines="1"
                    android:layout_marginTop="-4dp"
                    android:textSize="@dimen/size_15sp"

                    android:layout_gravity="center_vertical"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>



        </RelativeLayout>

    </RelativeLayout>




    <LinearLayout
        android:id="@+id/sign_in_inside_layout"
        android:layout_below="@+id/top_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_30_dp"
        android:layout_height="wrap_content">



        <com.application.millipixels.expense_rocket.typeface.FontsClass
            android:text="@string/signin"
            android:textSize="36sp"
            android:textColor="@color/purple_text"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.application.millipixels.expense_rocket.typeface.FontsClassLight
            android:id="@+id/txtOtp"
            android:layout_marginTop="@dimen/margin_5_dp"
            android:text="@string/we_just_sent_otp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:textSize="16sp"
            android:textColor="@color/light_black"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_marginTop="10dp"
            android:id="@+id/layout_otp"
            android:layout_below="@+id/txtEnterText"

            android:paddingTop="@dimen/padding_10dp"
            android:paddingBottom="@dimen/padding_10dp"
            android:paddingLeft="@dimen/padding_70dp"
            android:paddingRight="@dimen/padding_70dp"

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:elevation="@dimen/margin_5_dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="wrap_content">

                <com.application.millipixels.expense_rocket.typeface.FontEditText
                    android:inputType="number"
                    android:id="@+id/edt1"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:nextFocusForward="@id/edt2"
                    android:lines="1"
                    android:maxLength="1"
                    android:background="@drawable/otp_bg"
                    android:imeOptions="actionNext"
                    android:gravity="center"
                    android:layout_width="44dp"
                    android:layout_height="67dp" />

            </LinearLayout>

            <LinearLayout
                android:elevation="@dimen/margin_5_dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="wrap_content">

                <com.application.millipixels.expense_rocket.typeface.FontEditText
                    android:inputType="number"

                    android:id="@+id/edt2"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:lines="1"
                    android:nextFocusForward="@id/edt3"
                    android:maxLength="1"
                    android:imeOptions="actionNext"
                    android:background="@drawable/otp_bg"
                    android:gravity="center"
                    android:layout_width="44dp"
                    android:layout_height="67dp" />

            </LinearLayout>

            <LinearLayout

                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="wrap_content">

                <com.application.millipixels.expense_rocket.typeface.FontEditText
                    android:inputType="number"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:lines="1"
                    android:id="@+id/edt3"
                    android:imeOptions="actionNext"
                    android:gravity="center"
                    android:background="@drawable/otp_bg"
                    android:maxLength="1"
                    android:nextFocusForward="@id/edt4"
                    android:layout_width="44dp"
                    android:layout_height="67dp" />

            </LinearLayout>


            <LinearLayout

                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="wrap_content">

                <com.application.millipixels.expense_rocket.typeface.FontEditText
                    android:inputType="number"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:lines="1"
                    android:imeOptions="actionDone"
                    android:gravity="center"
                    android:background="@drawable/otp_bg"
                    android:maxLength="1"
                    android:id="@+id/edt4"
                    android:layout_width="44dp"
                    android:layout_height="67dp" />

            </LinearLayout>


        </LinearLayout>


        <Button
            android:id="@+id/btnVerify"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_20_dp"
            android:layout_marginLeft="@dimen/margin_70_dp"
            android:layout_marginRight="@dimen/margin_70_dp"
            android:paddingTop="@dimen/padding_15_dp"
            android:paddingBottom="@dimen/padding_15_dp"
            android:textSize="@dimen/size_18dp"
            android:background="@drawable/app_round_button_drawable_purple"
            android:text="@string/signin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <com.application.millipixels.expense_rocket.typeface.FontsClassLight
            android:text="@string/did_not_received"
            android:id="@+id/btnNotReceived"
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/red_button"
            android:layout_marginTop="@dimen/margin_30_dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_30_dp"
            android:src="@drawable/ic_rocket_neww"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_below="@+id/sign_in_inside_layout"
        android:layout_width="match_parent"
        android:layout_above="@+id/sign_in_bottom_layout"
        android:visibility="gone"
        android:layout_height="match_parent">


        <ImageView
            android:layout_marginBottom="@dimen/margin_20_dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_rocket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sign_in_bottom_layout"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="5px"

            android:background="@color/line_color" />

        <RelativeLayout

            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginBottom="@dimen/margin_20_dp"
            android:layout_marginTop="@dimen/margin_20_dp"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/imgTwiiter"
                android:layout_alignParentRight="true"
                android:src="@drawable/twitter"
                android:layout_width="36dp"
                android:layout_height="36dp" />
            <ImageView
                android:layout_toLeftOf="@+id/imgTwiiter"
                android:layout_marginRight="@dimen/margin_50_dp"
                android:src="@drawable/google"
                android:layout_width="36dp"
                android:id="@+id/imgGPlus"
                android:layout_height="36dp" />

            <ImageView
                android:layout_toLeftOf="@+id/imgGPlus"
                android:layout_marginRight="@dimen/margin_50_dp"
                android:src="@drawable/fb"
                android:layout_width="36dp"
                android:id="@+id/imgFb"
                android:layout_height="36dp" />

            <com.google.android.gms.common.SignInButton
                android:id="@+id/sign_in_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone"
                />
            <com.facebook.login.widget.LoginButton
                android:id="@+id/login_button"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp" />
            <com.twitter.sdk.android.core.identity.TwitterLoginButton
                android:elevation="5dp"
                android:visibility="gone"
                android:id="@+id/twitter_login"
                android:layout_marginBottom="36dp"
                android:layout_toLeftOf="@+id/imgFb"
                android:layout_centerHorizontal="true"
                android:paddingLeft="60dp"
                android:layout_marginTop="2dp"
                android:paddingRight="60dp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:text="@string/send_otp"
                android:background="@drawable/app_round_button_drawable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>
