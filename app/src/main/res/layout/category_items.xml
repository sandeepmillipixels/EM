<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/cat_layout"
        android:layout_width="match_parent"
        android:padding="@dimen/padding_10dp"
        android:layout_marginLeft="@dimen/margin_10_dp"
        android:layout_marginTop="@dimen/margin_5_dp"
        android:layout_marginRight="@dimen/margin_10_dp"
        android:layout_marginBottom="@dimen/margin_10_dp"
        android:layout_height="@dimen/catItem_height">


        <ImageView
            android:id="@+id/catImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_groceries" />


        <TextView
            android:id="@+id/catTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/catImageView"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/catImageView"
            android:layout_toRightOf="@+id/catImageView"
            android:gravity="center"
            android:text="sugdusdg"
            android:textSize="@dimen/size_18dp" />


    </RelativeLayout>


</RelativeLayout>