<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#fff">

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:text="@string/skip"

        android:layout_height="@dimen/topbar_Height">


        <com.application.millipixels.expense_rocket.typeface.FontsClassLight
            android:id="@+id/btn_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/skip"
            android:padding="@dimen/padding_10dp"
            android:layout_marginRight="@dimen/margin_10_dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/size_15dp"
            android:layout_centerVertical="true"
            android:textColor="@color/selectedColor" />
    </RelativeLayout>

    <LinearLayout

        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/onboarding_login_signup_layout"
        android:id="@+id/layoutDots"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/margin_60_dp"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"

           />
        <FrameLayout
            android:visibility="gone"
            android:id="@+id/FrameLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <com.facebook.login.widget.LoginButton
                android:id="@+id/login_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp" />

            <Button
                android:id="@+id/fb"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#416BC1"
                android:onClick="onClick"
                android:text="FaceBook"
                android:textColor="#ffffff"
                android:textStyle="bold" />
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/onboarding_login_signup_layout"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginBottom="@dimen/margin_15_dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <com.application.millipixels.expense_rocket.typeface.FontButton
            android:id="@+id/btnLogin"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:text="@string/login"
            android:inputType="number"
            android:paddingRight="@dimen/padding_50dp"
            android:paddingLeft="@dimen/padding_50dp"
            android:layout_marginBottom="@dimen/margin_20_dp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:background="@drawable/app_round_button_drawable"
            android:layout_marginRight="@dimen/margin_10_dp"
            android:layout_height="wrap_content" />

        <com.application.millipixels.expense_rocket.typeface.FontButton
            android:layout_weight="1"
            android:id="@+id/btnSignup"
            android:text="@string/signup"
            android:inputType="number"
            android:paddingRight="@dimen/padding_50dp"
            android:paddingLeft="@dimen/padding_50dp"
            android:textColor="@color/white"
            android:layout_marginBottom="@dimen/margin_20_dp"
            android:textAllCaps="false"
            android:background="@drawable/app_round_button_drawable"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>