<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.application.millipixels.expense_rocket.addexpense.ExpenseListBycategoryActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:background="@drawable/app_gradient"
        android:layout_height="@dimen/topbar_height">



    </android.support.v7.widget.Toolbar>




    <RelativeLayout
        android:id="@+id/record_total_amount_layout"
        android:layout_width="match_parent"
        android:layout_below="@+id/toolbar"
        android:background="@color/blue"
        android:padding="@dimen/padding_15_dp"

        android:layout_height="100dp">


        <com.application.millipixels.expense_rocket.typeface.FontsClassLight
            android:id="@+id/total_spending_title_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/margin_20_dp"
            android:layout_alignParentTop="true"
            android:text="@string/total_spending2"
            android:textColor="@color/white"
            android:textSize="@dimen/size_15dp" />

        <com.application.millipixels.expense_rocket.typeface.FontsClass
            android:layout_below="@+id/total_spending_title_record"
            android:id="@+id/txtTotalAmount"
            android:textColor="@color/white"
            android:text="$3000"
            android:textSize="@dimen/size_16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </RelativeLayout>



    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayout_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:layout_below="@+id/record_total_amount_layout"
        app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
        app:tabIndicatorColor="@color/greenFloating"
        app:tabSelectedTextColor="@color/white"
        app:tabTextColor="@color/white"
        app:tabMode="scrollable"
        app:tabGravity="center"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager_record"
        android:layout_below="@+id/tabLayout_record"
        android:layout_height="match_parent"
        android:layout_width="match_parent" />


</RelativeLayout>
