<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_marginRight="40dp"
    android:layout_marginLeft="40dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    app:ignore="NamespaceTypo">


    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:layout_below="@+id/layout_action"
        android:background="@android:color/white"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        card_view:cardCornerRadius="5dp">
        <RelativeLayout
            android:paddingRight="28dp"
            android:paddingLeft="28dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.application.millipixels.expense_rocket.typeface.FontsClassLight
                android:textStyle="bold"
                android:textSize="14sp"
                android:id="@+id/txtEnterText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="24dp"
                android:text="@string/enter_your_phone"
                />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spnCountary"
                android:layout_marginTop="@dimen/margin_10_dp"
                android:layout_below="@+id/txtEnterText"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <View
                android:id="@+id/divider_spinner"
                android:layout_marginTop="4dp"
                android:background="@android:color/black"
                android:layout_below="@+id/spnCountary"
                android:layout_width="match_parent"
                android:visibility="invisible"
                android:layout_height="0.4dp"></View>

            <EditText
                android:hint="@string/enter_your_phone"
                android:id="@+id/edtPhoneLogin"
                android:singleLine="true"
                android:lines="1"
                android:maxLength="13"
                android:inputType="textEmailAddress"
                android:imeOptions="actionDone"
                android:textSize="14sp"
                android:layout_below="@+id/divider_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:elevation="5dp"
                android:id="@+id/btnSendOtpLogin"
                android:layout_marginBottom="24dp"
                android:layout_below="@+id/edtPhoneLogin"
                android:layout_centerHorizontal="true"
                android:paddingLeft="60dp"
                android:layout_marginTop="28dp"
                android:paddingRight="60dp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:text="@string/send_otp"
                android:background="@drawable/app_round_button_drawable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <RelativeLayout
                android:layout_marginBottom="24dp"
                android:layout_below="@+id/btnSendOtpLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imgGPlus"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_if_google_circle"
                    android:layout_width="48dp"
                    android:layout_height="48dp" />
                <ImageView
                    android:layout_toLeftOf="@+id/imgGPlus"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/ic_if_facebook_circle"
                    android:layout_width="48dp"
                    android:id="@+id/imgFb"
                    android:layout_height="48dp" />

                <ImageView
                    android:layout_toLeftOf="@+id/imgFb"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/ic_if_twitter_circle"
                    android:layout_width="48dp"
                    android:id="@+id/imgTwiiter"
                    android:layout_height="48dp" />
                <com.google.android.gms.common.SignInButton
                    android:id="@+id/sign_in_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                     />
                <com.facebook.login.widget.LoginButton
                    android:id="@+id/login_button"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp" />
                <com.twitter.sdk.android.core.identity.TwitterLoginButton
                    android:elevation="5dp"
                    android:visibility="gone"
                    android:id="@+id/twitter_login"
                    android:layout_marginBottom="36dp"
                    android:layout_toLeftOf="@+id/imgFb"
                    android:layout_centerHorizontal="true"
                    android:paddingLeft="60dp"
                    android:layout_marginTop="2dp"
                    android:paddingRight="60dp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:text="@string/send_otp"
                    android:background="@drawable/app_round_button_drawable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>