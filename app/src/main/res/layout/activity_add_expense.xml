<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.millipixelsinteractive_031.em.addexpense.AddExpense">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:background="@drawable/app_gradient"
        android:layout_height="@dimen/topbar_height">



    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:background="@drawable/round_white_square"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_below="@+id/toolbar"
        android:padding="@dimen/margin_10_dp"
        android:layout_marginTop="@dimen/margin_10_dp"
        android:layout_marginLeft="@dimen/margin_15_dp"
        android:layout_marginRight="@dimen/margin_15_dp"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout">


        <android.support.design.widget.TextInputLayout

            android:layout_marginTop="@dimen/margin_15_dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <com.example.millipixelsinteractive_031.em.typeface.FontEditText
            android:id="@+id/edtExpenseName"
            android:layout_width="match_parent"
            android:textColor="@color/colorPrimary"
            android:hint="@string/expense_name"
            android:imeOptions="actionNext"
            android:textSize="14sp"
            android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout

            android:layout_marginTop="@dimen/margin_20_dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <com.example.millipixelsinteractive_031.em.typeface.FontEditText
            android:id="@+id/edtAmount"
            android:layout_width="match_parent"
            android:textColor="@color/colorPrimary"
            android:hint="@string/amount"
            android:imeOptions="actionNext"
            android:textSize="14sp"
            android:inputType="number"
            android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout

            android:layout_marginTop="@dimen/margin_20_dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <com.example.millipixelsinteractive_031.em.typeface.FontEditText
            android:id="@+id/edtCategoryName"

            android:textColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:hint="@string/category"
            android:clickable="true"
            android:textSize="14sp"
            android:imeOptions="actionNext"
            android:focusable="false"
            android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="@dimen/margin_20_dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <com.example.millipixelsinteractive_031.em.typeface.FontEditText
            android:id="@+id/edtNotes"
            android:layout_width="match_parent"
            android:textColor="@color/colorPrimary"
            android:hint="@string/notes"
            android:layout_marginTop="@dimen/margin_10_dp"
            android:imeOptions="actionNext"
            android:textSize="14sp"
            android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout

            android:layout_marginTop="@dimen/margin_20_dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <com.example.millipixelsinteractive_031.em.typeface.FontEditText
            android:id="@+id/edtDate"
            android:layout_width="match_parent"
            android:hint="@string/date"
            android:textColor="@color/colorPrimary"
            android:focusable="false"
            android:clickable="true"
            android:imeOptions="actionDone"
            android:inputType="date"
            android:textSize="14sp"

            android:layout_height="wrap_content" />

        </android.support.design.widget.TextInputLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="@dimen/margin_20_dp"
            android:layout_height="wrap_content">


            <TextView
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="@string/thumbnail"
                android:layout_width="wrap_content"
                android:textSize="@dimen/size_14dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/firstImage"
                android:src="@drawable/ic_menu_camera"
                android:layout_marginLeft="@dimen/margin_10_dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/secondImage"
                android:visibility="gone"
                android:src="@drawable/ic_menu_camera"
                android:layout_marginLeft="@dimen/margin_10_dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <com.example.millipixelsinteractive_031.em.typeface.FontButton
            android:id="@+id/saveButton"
            android:text="@string/save"

            android:layout_marginTop="@dimen/margin_30_dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/app_round_button_drawable"
            android:inputType="number"
           android:textColor="@color/white"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:layout_height="wrap_content" />


    </LinearLayout>


</RelativeLayout>
