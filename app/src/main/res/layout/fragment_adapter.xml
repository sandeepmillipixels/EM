<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    card_view:cardCornerRadius="15dp"
    card_view:cardElevation="15dp"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/onboarding_background"
    app:cardUseCompatPadding="true"

    >

    <FrameLayout

        android:layout_width="match_parent"
        android:background="@color/transparent"
        android:layout_height="match_parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top|left"
            android:orientation="vertical"
            android:padding="@dimen/padding_20dp">

            <com.application.millipixels.expense_rocket.typeface.FontsClass
                android:id="@+id/titleTextView"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:layout_height="wrap_content" />

            <com.application.millipixels.expense_rocket.typeface.FontsClassLight
                android:id="@+id/contentTextView"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginTop="24dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:orientation="vertical" >


          <com.application.millipixels.expense_rocket.typeface.FontButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/app_round_button_drawable"

              android:layout_marginLeft="@dimen/margin_30_dp"
              android:layout_marginRight="@dimen/margin_30_dp"
                android:textColor="@color/purple_text"
                android:text="@string/add_an_expense" />
        </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="-5dp"
           />

    </FrameLayout>

</android.support.v7.widget.CardView>