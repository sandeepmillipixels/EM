<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_marginRight="40dp"
    android:layout_marginLeft="40dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    app:ignore="NamespaceTypo">


    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:layout_below="@+id/layout_action"
        android:background="@android:color/white"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        card_view:cardCornerRadius="5dp">
        <RelativeLayout
            android:paddingRight="28dp"
            android:paddingLeft="28dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:textSize="14sp"
                android:id="@+id/txtEnterText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:text="@string/enter_your_phone"
                />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spnCountary"
                android:layout_marginTop="32dp"
                android:layout_below="@+id/txtEnterText"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:hint="@string/enter_your_phone"
                android:id="@+id/edtPhone"
                android:singleLine="true"
                android:lines="1"
                android:imeOptions="actionNext"
                android:textSize="14sp"
                android:layout_marginTop="24dp"
                android:layout_below="@+id/spnCountary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnSendOtpLogin"
                android:layout_marginBottom="36dp"
                android:layout_below="@+id/edtPhone"
                android:layout_centerHorizontal="true"
                android:paddingLeft="60dp"
                android:layout_marginTop="28dp"
                android:paddingRight="60dp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:text="@string/send_otp"
                android:background="@drawable/app_round_button_drawable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>